<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:background="#1ff9c982"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Activitys.ForgotPasswordActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:gravity="center"
        android:textSize="30dp"
        android:text="Forgot your password"
        android:textColor="#673AB7" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:gravity="center"
        android:textSize="15dp"
        android:text="Type your email address that you previously registered in the application, then press the Send button."
        android:textColor="#FF5722" />

    <EditText
        android:id="@+id/EDTXT_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:gravity="center"
        android:hint="E-mail"
        android:padding="10sp"
        android:inputType="textEmailAddress"
        android:textColor="#000" />

    <TextView
        android:id="@+id/TextCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:gravity="center"
        android:textSize="20dp"

        android:textColor="#009688" />

    <Button
        android:id="@+id/BTN_Send_D_forgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0"
        android:background="#BB00BCD4"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Send"
        android:textColor="#000" />




</LinearLayout>